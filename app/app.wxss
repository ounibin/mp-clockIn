@import 'weui.wxss';
Page {
    background-color: #eeeeee;
    font-family: '微软雅黑';
}
/*logo start*/
.logo {
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
} 
.logo image {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.logo text{
    /*color: #aaa;*/
}
/*logo end*/
.cell {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: #FFF;
}

.cell-input {
    /*width: 70%;*/
    padding: 0 0 0 10rpx;
    background-color: #FFF;
}

.h1, .h2, .h3, .h4 {
    font-weight: 500;
    line-height: 1.1;
    color: inherit;
    text-align: center;
    margin: .67em 0;
}

.h1 {
    font-size: 36px;
}

.h2 {
    font-size: 30px;
}

.h3 {
    font-size: 24px;
}

.h4 {
    font-size: 18px;
}

.bottom {
    width: 100%;
    position: fixed;
    bottom: 50rpx;
}

.btn {
    margin: 25rpx;
}

.state {
    font-style: italic;
    /*font-size: 80%;*/
    color: #777;
    margin: 10rpx 0;
}

.input {
    /*padding: 6rpx 12rpx;*/
    margin: 0 20rpx;
    border-radius: 4rpx;
    background-color: #f7f7f7;
}

.remark {
    width: 100%;
    padding: 6rpx 12rpx;
    border-radius: 4rpx;
    background-color: #f7f7f7;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.right {
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
}

.column {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}


